{
  "author": "Turo engineering",
  "description": "GitHub Action for Semantic Release",
  "dependencies": {
    "@actions/core": "^2.0.0",
    "@actions/exec": "^2.0.0",
    "@actions/github": "^7.0.0",
    "@vercel/ncc": "^0.38.1",
    "semver": "^7.6.2"
  },
  "devDependencies": {
    "@jest/globals": "30.2.0",
    "@open-turo/eslint-config-typescript": "18.1.31",
    "@types/jest": "30.0.0",
    "@types/node": "24.10.4",
    "eslint": "9.39.2",
    "jest": "30.2.0",
    "prettier": "3.7.4",
    "rimraf": "6.1.2",
    "semantic-release": "24.2.9",
    "ts-jest": "29.4.6",
    "ts-node": "10.9.2",
    "ts-patch": "3.3.0",
    "tsc-watch": "7.2.0",
    "typescript": "5.9.3",
    "typescript-transform-paths": "3.5.6"
  },
  "engines": {
    "node": ">= 20"
  },
  "license": "MIT",
  "main": "lib/index.js",
  "name": "@open-turo/semantic-release-action",
  "peerDependencies": {
    "semantic-release": ">=23.0.0"
  },
  "private": true,
  "scripts": {
    "build": "ncc build src/index.ts -m -e semantic-release -o dist --source-map --license licenses.txt",
    "clean": "rimraf dist",
    "lint": "eslint",
    "test": "node --experimental-vm-modules ../node_modules/jest/bin/jest.js",
    "watch": "clean && tsc-watch -w -p ./tsconfig.build.json --compiler ./node_modules/.bin/tspc"
  },
  "type": "module",
  "types": "lib/index.d.ts"
}
