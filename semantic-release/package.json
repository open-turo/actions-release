{
  "author": "Turo engineering",
  "description": "GitHub Action for Semantic Release",
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@actions/exec": "^1.1.1",
    "@actions/github": "^6.0.0",
    "@vercel/ncc": "^0.38.1",
    "semver": "^7.6.2"
  },
  "devDependencies": {
    "@jest/globals": "29.7.0",
    "@open-turo/eslint-config-typescript": "15.0.2",
    "@types/jest": "29.5.14",
    "@types/node": "22.13.14",
    "eslint": "8.57.1",
    "jest": "29.7.0",
    "prettier": "3.5.3",
    "prettier-2": "npm:prettier@2.8.8",
    "rimraf": "6.0.1",
    "semantic-release": "24.2.3",
    "ts-jest": "29.3.1",
    "ts-node": "10.9.2",
    "ts-patch": "3.3.0",
    "tsc-watch": "6.2.1",
    "typescript": "5.8.2",
    "typescript-transform-paths": "3.5.5"
  },
  "engines": {
    "node": ">= 20"
  },
  "license": "MIT",
  "main": "lib/index.js",
  "name": "@open-turo/semantic-release-action",
  "peerDependencies": {
    "semantic-release": ">=23.0.0"
  },
  "scripts": {
    "build": "ncc build src/index.ts -m -e semantic-release -o dist --source-map --license licenses.txt",
    "clean": "rimraf dist",
    "lint": "eslint ./src ./test --ext .ts",
    "test": "node --experimental-vm-modules ../node_modules/jest/bin/jest.js",
    "watch": "clean && tsc-watch -w -p ./tsconfig.build.json --compiler ./node_modules/.bin/tspc"
  },
  "type": "module",
  "types": "lib/index.d.ts"
}
