{
  "author": "Turo engineering",
  "description": "GitHub Action for Semantic Release",
  "dependencies": {
    "@actions/core": "^3.0.0",
    "@actions/exec": "^3.0.0",
    "@actions/github": "^9.0.0",
    "@vercel/ncc": "^0.38.4",
    "semver": "^7.7.3"
  },
  "devDependencies": {
    "@open-turo/eslint-config-typescript": "18.1.37",
    "@vitest/coverage-v8": "3.0.5",
    "@types/node": "24.10.9",
    "eslint": "9.39.2",
    "prettier": "3.8.1",
    "rimraf": "6.1.2",
    "semantic-release": "25.0.3",
    "ts-node": "10.9.2",
    "ts-patch": "3.3.0",
    "tsc-watch": "7.2.0",
    "typescript": "5.9.3",
    "typescript-transform-paths": "3.5.6",
    "vitest": "3.0.5"
  },
  "engines": {
    "node": ">= 20"
  },
  "license": "MIT",
  "main": "lib/index.js",
  "name": "@open-turo/semantic-release-action",
  "peerDependencies": {
    "semantic-release": ">=23.0.0"
  },
  "private": true,
  "scripts": {
    "build": "ncc build src/index.ts -m -e semantic-release -o dist --source-map --license licenses.txt",
    "clean": "rimraf dist",
    "lint": "eslint",
    "test": "vitest run",
    "watch": "clean && tsc-watch -w -p ./tsconfig.build.json --compiler ./node_modules/.bin/tspc"
  },
  "type": "module",
  "types": "lib/index.d.ts"
}
